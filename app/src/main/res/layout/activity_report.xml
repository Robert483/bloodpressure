<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/Spacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="@string/report_title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4" />

        <TextView
            android:id="@+id/txtv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_full"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider" />

        <TextView
            style="@style/SpacingBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_name" />

        <TextView
            android:id="@+id/txtv_name"
            style="@style/SpacingBody2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="48dp"
            android:background="@color/colorDivider" />

        <TextView
            style="@style/SpacingBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_systolic" />


        <TextView
            android:id="@+id/txtv_systolic"
            style="@style/SpacingBody2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="48dp"
            android:background="@color/colorDivider" />

        <TextView
            style="@style/SpacingBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_diastolic" />

        <TextView
            android:id="@+id/txtv_diastolic"
            style="@style/SpacingBody2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="48dp"
            android:background="@color/colorDivider" />

        <TextView
            style="@style/SpacingBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report_condition" />

        <TextView
            android:id="@+id/txtv_condition"
            style="@style/SpacingBody2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="48dp"
            android:background="@color/colorDivider" />

    </LinearLayout>

</ScrollView>